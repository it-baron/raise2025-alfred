# Alfred Voice Worker - Environment Configuration
# Copy this file to .env.local and update with your actual values

# Coral Protocol Configuration
CORAL_BROKER_URL=nats://coral-server:4222

# LiveKit Configuration (for voice processing)
LIVEKIT_URL=wss://your-livekit-server
LIVEKIT_API_KEY=your-api-key
LIVEKIT_SECRET=your-secret

# Groq Configuration (Required for hackathon - STT/LLM/TTS)
GROQ_API_KEY=your-groq-api-key

# Voice Configuration
ROOM_NAME=batcave-demo
DIGEST_CRON_TZ=Europe/Paris
LLM_MODEL=llama-3.3-70b-versatile

# MCP Server Configuration (Optional for Phase 0)
USE_MCP_SERVERS=false
CORAL_SSE_URL=http://localhost:3000/sse
CORAL_AGENT_ID=alfred_voice_worker

# Logging
LOG_LEVEL=info

# Service URLs (internal Docker network)
GMAIL_AGENT_URL=http://gmail-agent:9201
GCAL_AGENT_URL=http://gcal-agent:9202
GTASKS_AGENT_URL=http://gtasks-agent:9203

# MCP Stub URLs (internal Docker network)
GMAIL_MCP_URL=http://gmail-mcp:9101
GCAL_MCP_URL=http://gcal-mcp:9102
GTASKS_MCP_URL=http://gtasks-mcp:9103

# External Port Mappings
CORAL_STUDIO_PORT=7000
CORAL_BROKER_CLIENT_PORT=4222
CORAL_BROKER_CLUSTER_PORT=6222
CORAL_BROKER_MONITOR_PORT=8222
VOICE_WORKER_PORT=8000
GMAIL_AGENT_PORT=9201
GCAL_AGENT_PORT=9202
GTASKS_AGENT_PORT=9203
GMAIL_MCP_PORT=9101
GCAL_MCP_PORT=9102
GTASKS_MCP_PORT=9103